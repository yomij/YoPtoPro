{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/": [
        "./src/"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "outDir": "./dist/"
}
